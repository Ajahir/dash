<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
        


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/textViewDashboard"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="200dp" >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon"
            android:id="@+id/imageView1"
            
                  />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#2C62FF"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:text=" January"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:id="@+id/textViewJanuary"
        />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
          
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$ 500"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
                
             android:textColor="#FFFFFF"
            android:id="@+id/textView500"
                
        
        />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/data"
                android:id="@+id/imageView2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:layout_gravity="center"
                  />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_width="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_height="5dp"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_marginTop="70dp"
            android:progress="70"
            android:max="100"
            android:background="#9016 "
            android:progressDrawable="@drawable/barcolor"
             
        
        />
        <TextView
            android:id="@+id/textView70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="70%"
           android:layout_marginTop="62dp"  
            android:progress="70"
             android:textColor="#FFFFFF"
            android:gravity="right"
            android:layout_marginRight="40dp"
        />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily spend traget:$16.67"
             android:textColor="#FFFFFF"
            android:progress="70"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
        />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
          
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily spends"/>
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see all"
            android:layout_marginLeft="220dp"
            android:textColor="#2C62FF"/>

        </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </androidx.cardview.widget.CardView>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
          
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="whishlist"/>
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see all"
            android:layout_marginLeft="240dp"
            android:textColor="#2C62FF"/>


        </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    </androidx.cardview.widget.CardView>
  
        
    </LinearLayout>
